extends layout

block content
    h1 #{product.product_name}
        h4 Product description:- #{product.product_desc}
        h4 Product Quantity:- #{product.product_quantity}
        h4 Product Price:- #{product.product_price}
        hr
        a.btn.btn-default(href='/products/edit/'+product._id) Edit
        a.btn.btn-danger.delete-product(href="#",data-id=product._id) Delete